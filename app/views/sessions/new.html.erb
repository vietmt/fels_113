<% provide :title, t("signin.name") %>
<h1><%= t "signin.name" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: signin_path do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.label :remember_me, class: "checkbox" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "signin.rememberme" %></span>
      <% end %>
      <%= f.submit t "signin.name", class: "btn btn-primary" %>
    <% end %>
    <p><%= t "signup.newuser" %> <%= link_to t("signup.signupnow"), signup_path %></p>
  </div>
</div>
