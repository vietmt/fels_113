<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= avatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t("user.profile"), @user %></span>
    </section>
    <section class="stats">
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to avatar_for(user), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @users.any? %>
      <table class="table table-bordered">
        <thead>
          <tr class="success">
            <th>Avatar</th>
            <th>Username</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <%= render @users %>
         </tbody>
      </table>
      <%= will_paginate @users %>
    <% end %>
  </div>
</div>
