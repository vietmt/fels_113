<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("globalname"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path %></li>
        <% if signed_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t("category.name"), admin_categories_path %></li>
            <li><%= link_to t("user.list"), admin_users_path %></li>
          <% else %>
            <li><%= link_to t("user.list"), users_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("user.profile"), current_user %></li>
              <li>
                <%= link_to t("user.setting"), edit_user_path(current_user) %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to t("signout"), signout_path, method: :delete %>
              </li>
            </ul>
          </li>

          <li></li>
        <% else %>
          <li><%= link_to t("signin.name") , signin_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
