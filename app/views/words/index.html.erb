<%= form_for words_path, method: :get do |f| %>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div class="col-md-6">
        <%= select_tag :category_id,
            options_from_collection_for_select(@categories, :id, :name,
            params[:category_id]),
            include_blank: t("word.all"), class: "form-control" %>
      </div>
      <% Settings.option.each do |option| %>
        <div class="col-md-2">
          <div class="col-md-6">
          <%= radio_button_tag :option, option,
            (checked = true if params[:option] == option) %>
          </div>
          <%= t "word.#{option}" %>
        </div>
      <% end %>
      <%= f.submit t("filter"), class: "btn btn-primary" %>
      </div>
    </div>
    <div class="col-md-1"></div>
  </div>
<% end %>
<% if @words.any? %>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <% @words.each do |word| %>
        <div>
          <%= t "content" %>: <%= word.content %>
          <p><%= image_tag word.image, size: Settings.size_image_of_word if word.image? %></p>
          <% if word.sound? %>
            <%= audio_tag word.sound, class: "audio-play" %>
            <p class="btn btn-primary audioButton"><%= t "play" %></p>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
<% end %>
